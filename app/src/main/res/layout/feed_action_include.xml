<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_action_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_32"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/spacing_16"
            android:layout_height="@dimen/spacing_16"
            android:contentDescription="@string/nav_mine"
            android:focusable="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_browse"/>

        <TextView
            android:id="@+id/feed_view_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_16"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_marginStart="@dimen/spacing_10"
            android:gravity="center"
            android:text="@string/zero_num"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_comment_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/spacing_16"
            android:layout_height="@dimen/spacing_16"
            android:contentDescription="@string/nav_mine"
            android:focusable="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_message"/>

        <TextView
            android:id="@+id/feed_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_16"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_marginStart="@dimen/spacing_10"
            android:gravity="center"
            android:text="@string/zero_num"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_like_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_like_icon"
            android:layout_width="@dimen/spacing_16"
            android:layout_height="@dimen/spacing_16"
            android:contentDescription="@string/nav_mine"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_like_selector"/>

        <TextView
            android:id="@+id/feed_like_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_16"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_marginStart="@dimen/spacing_10"
            android:gravity="center"
            android:text="@string/zero_num"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>
</LinearLayout>